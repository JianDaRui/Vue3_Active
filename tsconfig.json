{
  "include": [
    "src/**/*",
    "src/**/*.vue",
    "src/**/*.tsx",
    "src/**/*.jsx",
    "src/**/*.ts",
    "src/**/*.js"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "lib": [ "es2015" ],
    "paths": {
        "components/*": [
            "src/components/*"
        ]
    },
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules"
  ]
}